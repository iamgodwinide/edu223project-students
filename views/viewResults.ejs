<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid bg-white p-3">
            <div class="row">
                <div class="col-12">
                    <div class="bg-white p-3">
                        <h4 class="mb-5">
                            Result slip
                        </h4>
                        <hr />
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>First Name</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= req.user.firstname %>
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Middle Name</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= req.user.middlename %>
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Last Name</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= req.user.lastname %>
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Mat Number</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= req.user.matno %>
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Session</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= results[0].session %>
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Level</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= results[0].level %>L
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Semester</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left" style="text-transform: capitalize;">
                                    <%= results[0].semester %> Semester
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>Total Credits</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= totalcredits %>
                                </p>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-2 col-6">
                                <b>GPA</b>
                            </div>
                            <div class="col-md-10 col-6">
                                <p class="text-left">
                                    <%= calculate_gpa(results) %>
                                </p>
                            </div>
                        </div>
                        <div class="table-responsive table--no-card m-b-30 p-3">
                            <div style="text-align: right;">
                                <!-- <a href="/print/results/<%= results[0].session %>/<%= results[0].level %>/<%= results[0].semester%>"
                                    class="btn btn-success mb-3">
                                    <i class="fas fa-print"></i>
                                    Print Result</a> -->
                            </div>
                            <table class="table table-borderless table-striped table-earning" id="students">
                                <thead>
                                    <tr>
                                        <th class="text-left">Course</th>
                                        <th class="text-left">Grade</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% results.map(r=> {%>
                                        <tr>
                                            <td class="text-left">
                                                <%= r.course %>
                                            </td>
                                            <td class="text-left">
                                                <%= r.grade %>
                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>