<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row bg-white p-3">
                <div class="col-12">
                    <h1 class="mb-5">Results</h1>
                    <div class="table-responsive table--no-card m-b-30 p-3">
                        <%- include("./partials/messages") %>
                            <table class="table table-borderless table-striped table-earning" id="students">
                                <thead>
                                    <tr>
                                        <th class="text-left">Session</th>
                                        <th class="text-left">Level</th>
                                        <th class="text-left">Semester</th>
                                        <th class="text-left">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% results.map(r=> {%>
                                        <tr>
                                            <td class="text-left">
                                                <a
                                                    href="/results/<%= r[0].session %>/<%= r[0].level %>/<%= r[0].semester %>">
                                                    <%= r[0].session %>
                                                </a>
                                            </td>
                                            <td class="text-left">
                                                <%= r[0].level %>L
                                            </td>
                                            <td class="text-left" style="text-transform: capitalize;">
                                                <%= r[0].semester %>
                                            </td>
                                            <td>
                                                <a href="/results/<%= r[0].session %>/<%= r[0].level %>/<%= r[0].semester %>"
                                                    class="btn btn-secondary">
                                                    <i class="fas fa-eye"></i>
                                                    View Results</a>
                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>