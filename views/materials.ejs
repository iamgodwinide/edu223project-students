<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid bg-white p-3">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-5">Available Materials</h3>
                    <div class="table-responsive table--no-card m-b-30 p-3">
                        <table class="table table-borderless table-striped table-earning" id="students">
                            <thead>
                                <tr>
                                    <th class="text-left">Name</th>
                                    <th class="text-left">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% materials.map(m=> {%>
                                    <tr>
                                        <td class="text-left">
                                            <a href="<%= m.file %>" target="_blank">
                                                <%= m.name %>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="<%= m.file %>" target="_blank" class="btn btn-success">
                                                <i class="fas fa-download"></i>
                                                Download</a>
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>